<Page x:ConnectionId='1'
    x:Class="UWG_CS3230_FurnitureRental.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWG_CS3230_FurnitureRental"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="825" Width="1161">

    <Grid Margin="0,0,10,10" Width="1161" Height="825">
        <Grid.RowDefinitions>
            <RowDefinition Height="701*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="EmployeeInfoTextBlock" HorizontalAlignment="Left" Margin="24,16,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="117" Width="231" RenderTransformOrigin="0.5,0.5">
        </TextBlock>
        <Button x:ConnectionId='3' x:Name="RegisterCustomerButton" Content="Register New Customer" Margin="973,19,0,0" VerticalAlignment="Top"                                />
        <Button x:ConnectionId='4' x:Name="logoutButton" Content="Logout" Margin="1066,738,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.679,0.188" Width="68"                           />
        <Button x:ConnectionId='5' x:Name="placeNewOrderButton" Content="Place New Order" Margin="95,675,0,0" VerticalAlignment="Top" Width="436"                                   Height="37"/>
        <ListView x:ConnectionId='6' x:Name="orderListView" Margin="639,230,102,194"                                                 
                                                                         />
        <Button x:ConnectionId='7' x:Name="placeOrderButton" Content="Place Order" Margin="854,675,0,0" VerticalAlignment="Top" Width="231"                                Height="37"/>
        <Button x:ConnectionId='8' x:Name="cancelOrderButton" Content="Cancel Order" Margin="617,675,0,0" VerticalAlignment="Top" Width="232"                                 Height="37"/>
        <TextBox x:ConnectionId='9' x:Name="orderDetailsTextBox" HorizontalAlignment="Left" Margin="639,103,0,0" Text="Order Details" TextWrapping="Wrap" VerticalAlignment="Top" Width="420" IsReadOnly="True"/>
        <TextBox x:ConnectionId='10' x:Name="orderTotalTextBox" HorizontalAlignment="Left" Margin="828,608,0,0" Text="Order Total: " TextWrapping="Wrap" VerticalAlignment="Top" Width="205" IsReadOnly="True"/>
        <ComboBox x:ConnectionId='11' x:Name="quantityComboBox" Margin="454,677,0,0" Width="74" Height="38" PlaceholderText="Qty"
                                    />
        <Button x:ConnectionId='12' x:Name="removeFurnitureButton" Content="-" Margin="1014,175,0,0" VerticalAlignment="Top" Width="42" FontSize="18"                                    />
        <DatePicker x:ConnectionId='13' x:Name="orderDatePicker" Margin="639,177,0,0" VerticalAlignment="Top" Width="314"                                />
        <Grid x:ConnectionId='14' x:Name="orderBorder" BorderThickness="1" BorderBrush="Black" Margin="617,147,76,116">
            <TextBlock x:ConnectionId='28' x:Name="orderDueDateTextBlock" HorizontalAlignment="Left" Margin="23,10,0,0" Text="Order Due Date" TextWrapping="Wrap" VerticalAlignment="Top"/>

        </Grid>
        <Grid x:ConnectionId='15' x:Name="furniturePanel" BorderThickness="1" BorderBrush="Black" Margin="79,147,614,116">

            <Button x:ConnectionId='23' x:Name="addFurnitureButton" Content="+" Margin="397,30,0,0" VerticalAlignment="Top" Width="45" FontSize="18"                                 />
            <TextBox x:ConnectionId='24' x:Name="searchInputTextBox" Text="" TextWrapping="Wrap" PlaceholderText="Search for furniture"                                      Margin="25,33,190,455"/>
            <ComboBox x:ConnectionId='25' x:Name="categoryComboBox" Margin="25,72,0,0" Width="120" Height="34" PlaceholderText="Category"                                                />
            <ComboBox x:ConnectionId='26' x:Name="styleComboBox" Margin="155,72,0,0" Width="122" Height="34" PlaceholderText="Style"                                                />
            <ListView x:ConnectionId='27' x:Name="furnitureListView" Margin="27,131,26,25" RequestedTheme="Default" Header="Inventory"                                               
                                                                                                                      >
            </ListView>

        </Grid>
        <Grid x:ConnectionId='16' x:Name="memberPanel" BorderThickness="1" BorderBrush="Black" Margin="79,147,614,116" Visibility="Collapsed">

            <Button x:ConnectionId='19' x:Name="editMemberButton" Content="Edit Member" Margin="311,31,0,0" VerticalAlignment="Top" Width="132" FontSize="18" Visibility="Collapsed"                               />
            <ComboBox x:ConnectionId='20' x:Name="searchMemberByComboBox" PlaceholderText="Member Search Method" Margin="25,33,0,0" Width="251"></ComboBox>
            <TextBox x:ConnectionId='21' x:Name="memberSearchTextBox" Margin="25,72,190,415" Height="34" PlaceholderText="Search for member"                                               />
            <ListView x:ConnectionId='22' x:Name="memberListView" Margin="27,131,26,25" RequestedTheme="Default" Header="Members"                                             
                                                                                                                            >
            </ListView>

        </Grid>
        <Button x:ConnectionId='17' x:Name="toggleFurnitureAndMembers" Content="Toggle Members" Margin="423,103,0,0" VerticalAlignment="Top"                                        />
        <Button x:ConnectionId='18' x:Name="editItemButton" Content="#" Margin="970,175,0,0" VerticalAlignment="Top" Width="39" Height="37"                             />
    </Grid>
</Page>

